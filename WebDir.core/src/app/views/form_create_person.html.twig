{% extends 'base.html.twig' %}

{% block title %}Create Person
{% endblock %}

{% block content %}

	<form method="post">
		<div>
			<label for="nom">Nom :</label>
			<input type="text" id="nom" name="nom" required>
		</div>
		<div>
			<label for="prenom">Prénom :</label>
			<input type="text" id="prenom" name="prenom" required>
		</div>
		<div>
			<label for="mail">E-mail :</label>
			<input type="email" id="mail" name="mail" required>
		</div>
		<div>
			<label for="phone">Téléphone :</label>
			<input type="tel" id="phone" name="phone">
		</div>

		<div>
			<label for="phone_fix">Téléphone Fixe:</label>
			<input type="tel" id="phone_fix" name="phone_fix">
		</div>

		<div>
			<label for="num_bureau">Numéro de bureau :</label>
			<input type="number" id="num_bureau" name="num_bureau" required>
		</div>

		<div>
			<p>Liste des fonctions :</p>
			<ul>
				{% for fonction in fonctions %}

					<li>{{fonction.libelle}} - {{fonction.description}}</li>

				{% endfor %}
			</ul>
		</div>

		<div>
			<p>Liste des départements :</p>
			<ul>
				{% for departement in departements %}

					<li>{{departement.libelle}} - {{departement.description}}</li>

				{% endfor %}
			</ul>
		</div>

		<div>
			<p>Liste des services :</p>
			<ul>
				{% for service in services %}

					<li>{{service.libelle}} - {{service.description}}</li>

				{% endfor %}
			</ul>
		</div>


		<div>
			<button type="submit">Envoyer</button>
		</div>
	</form>

{% endblock %}
